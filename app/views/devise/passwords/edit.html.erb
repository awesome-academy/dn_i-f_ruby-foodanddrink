<div class="container">
  <h2 class="title"><%= t "form.change_your_password" %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label t "form.password" %><br>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class: "form-control" %><br>
      <% if @minimum_password_length %>
        <em>(<%= t "form.password_signup" %> )</em>
      <% end %>
      <%= show_message_for_field(resource, :password) %>
    </div>

    <div class="field">
      <%= f.label t "form.password_confirmation" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      <%= show_message_for_field(resource, :password_confirmation) %>
    </div>

    <div class="actions">
      <%= f.submit t("form.change_your_password"), class: "btn btn-primary mt-3" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
