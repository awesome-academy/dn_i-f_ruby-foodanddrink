<% if @products.any? %>
  <% @products.each do |product| %>
    <div class="card card-inside">
        <%= gravatar_for product, size: Settings.gravatar.size_150 %>
    </div>
    <br>
    <div class="card-margin">
        <p><%= product.name %></p>
        <p class="card-p"><%= t "admin_product.price" %><%= number_to_currency(product.price, locale: :vi) %></p>
        <p class="card-p"><%= t "admin_product.quantity" %><%= product.quantity %></p>
      </div>
    </div>
  <% end %>
<% else %>
  <div>
    <h1><%= t "admin_product.product_empty" %></h1>
  </div>
<% end %>
