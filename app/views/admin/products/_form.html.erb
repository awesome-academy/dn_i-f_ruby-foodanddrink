<div class="form-all">
  <%= form_for [:admin, @product] do |f|%>
    <div class="lable-form">
      <%= f.label :name, t("new_product_admin.name") %>
      <%= f.text_field :name, class: "form-control" %>
      <%= show_message_for_field(@product, :name) %>

    </div>
    <div class="lable-form">
      <%= f.label :price, t("new_product_admin.price") %>
      <%= f.text_field :price, class: "form-control" %>
      <%= show_message_for_field(@product, :price) %>

    </div>
    <div class="lable-form">
      <%= f.label :description, t("new_product_admin.description") %>
      <%= f.text_field :description, class: "form-control" %>
      <%= show_message_for_field(@product, :description) %>

    </div>
    <div class="lable-form">
      <%= f.label :quantity, t("new_product_admin.quantity") %>
      <%= f.text_field :quantity, class: "form-control" %>
      <%= show_message_for_field(@product, :quantity) %>

    </div>
    <div class="lable-form">
      <%= f.label :category_id, t("new_product_admin.category_name") %>
      <%= f.collection_select :category_id, Category.select(:id, :name), :id, :name,
       {},{:class=>"form-control" }%>
    </div>
    <div class="lable-form">
       <%= link_to_add_fields t("new_product_admin.add_category"), f, :category%>
    </div>
    <div>
      <% if @product.image.present? %>
        <%= image_tag @product.display_image %>
        <%= link_to t("edit_product.delete"), remove_image_admin_product_path(@product),method: :delete, data: {confirm: t("edit_product.you_sure")}, class: "btn btn-danger btn-sm"%>
      <% end %>
    </div>

    <div class="lable-form mt-3">
      <%= f.label :image, t("new_product_admin.image") %>
      <%= f.file_field :image %>
    </div>

    <div class="submit-form-index">
      <%= f.submit t("new_product_admin.submit"),
          class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
