<div class="container">
  <div class="row">
    <h1 class="title"><%= t "login" %></h1>
  </div>
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <%= form_for :session, url: login_path do |f| %>
        <div class="form-group">
          <%= f.label t("email") %>
          <%= f.text_field :email, placeholder: t("enter_your_email"), class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label t("password") %>
          <%= f.password_field :password, placeholder: t("enter_your_password"),
            class: "form-control" %>
        </div>
        <div class="text-center">
          <%= f.submit t("login"), class: "btn btn-info col-lg-12" %>
        </div>
        <div class="text-right">
          <%= link_to t("register"), new_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
