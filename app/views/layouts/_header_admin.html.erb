<div class="col-md-3 left_col">
  <div class="left_col scroll-view">
    <div class="navbar nav_title nav_title_cus ml-2">
      <%= link_to t("manager"), admin_root_path, class: "site_title"  %>
    </div>
    <div class="clearfix"></div>
    <!-- menu profile quick info -->
    <div class="profile clearfix">
      <div class="profile_pic">
        <%= image_tag("person_1.jpg", class: "img-circle profile_img") %>
      </div>
      <div class="profile_info">
        <span><%= t "welcome" %>,</span>
        <h2><%= name %></h2>
      </div>
    </div>
    <br/>
    <!-- sidebar menu -->
    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
      <div class="menu_section">
        <ul class="nav side-menu">
          <li>
            <a>
              <%= t "manager_orders" %>
              <span class="fa fa-chevron-down" aria-hidden="true"></span>
            </a>
            <ul class="nav child_menu">
              <li><%= link_to t("status_order.open"), "#" %></li>
              <li><%= link_to t("status_order.confirmed"), "#" %></li>
            </ul>
          </li>
        </ul>
      </div>
      <div class="menu_section">
        <ul class="nav side-menu">
          <li>
            <a>
              <%= t "product.products" %>
              <span class="fa fa-chevron-down"></span>
            </a>
            <ul class="nav child_menu">
              <li><%= link_to t("product.all_products"), "#" %></li>
              <li><%= link_to t("product.categories"), "#" %></li>
              <li><%= link_to t("product.add_product"), "#" %></li>
            </ul>
          </li>
        </ul>
      </div>
      <div class="menu_section">
        <ul class="nav side-menu">
          <li>
            <a>
              <%= t "account.accounts" %>
              <span class="fa fa-chevron-down"></span>
            </a>
            <ul class="nav child_menu">
              <li><%= link_to t("account.all_account"), "#" %></li>
            </ul>
          </li>
        </ul>
      </div>
      <div class="menu_section">
        <ul class="nav side-menu">
          <li><%= link_to( t("logout"), "#") %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
